@model Risk.Models.NpvInputModel
<hr/>
<form id="npvForm">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.IntialInvestment, new { @class = "control-label col-xs-12 col-sm-3" })
            <div class="input-group col-xs-12 col-sm-9">
                <div class="input-group-addon">$</div>
                @Html.TextBoxFor(model => model.IntialInvestment, new { @class = "form-control", type = "number", step = "1" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LowerBoundDiscountRate, new { @class = "control-label col-xs-12 col-sm-3" })
            <div class="input-group col-xs-12 col-sm-9">
                <div class="input-group-addon">%</div>
                @Html.TextBoxFor(model => model.LowerBoundDiscountRate, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UpperBoundDiscountRate, new { @class = "control-label col-sm-3" })
            <div class="input-group col-sm-9">
                <div class="input-group-addon">%</div>
                @Html.TextBoxFor(model => model.UpperBoundDiscountRate, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DiscountRateIncrement, new { @class = "control-label col-sm-3" })
            <div class="input-group col-sm-9">
                <div class="input-group-addon">%</div>
                @Html.TextBoxFor(model => model.DiscountRateIncrement, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>
    </div>
    <div class="col-sm-9 col-sm-offset-2">
        <label>Cash Flows:</label>
        <div class="form-inline">
            <ul class="list-unstyled" data-bind="foreach: cashFlows">
                <li>
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
                        <div class="input-group">
                            <div class="input-group-addon">$</div>
                            <input type="text" class="form-control" placeholder="Amount" data-bind='value: amount, attr: { name: name}'>
                        </div>
                    </div>
                    <button type="button" class="btn btn-default" data-bind="click: $root.removeCashFlow"><span class="glyphicon glyphicon-remove-sign"></span></button>
                </li>
            </ul>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button type="button" class="btn btn-success" data-bind="click: addCashFlow">Add cash flow</button>
            <button type="button" class="btn btn-primary" data-bind="click: calculate">Calculate</button>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <canvas id="npvChart"></canvas>
    </div>
</form>

    





